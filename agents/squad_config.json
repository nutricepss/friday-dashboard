  "communication_rules": {
    "delegation": {
      "format": "@agent_name task_description [deadline]",
      "example": "@content_writinator Create Instagram reel about protein myths. Hook: 'Stop wasting money on these 3 supplements'. Include CTA. Due: 6 PM today",
      "response_required": true,
      "response_format": "Acknowledgment + ETA + Questions if any"
    },
    
    "reporting": {
      "agent_to_friday": {
        "format": "Task complete: [summary] + deliverables",
        "include": "Files created, links, key insights"
      },
      "friday_to_himanshu": {
        "format": "Executive summary of all agent work",
        "include": "Highlights, urgent items, next actions"
      }
    },
    
    "group_chat": {
      "visibility": "himanshu can observe all",
      "style": "fun, sitcom personalities, banter allowed",
      "rules": [
        "Use emojis and catchphrases",
        "Celebrate wins together",
        "Help each other out",
        "Keep it professional but fun"
      ]
    }
  },
  
  "task_status": {
    "backlog": "Not started",
